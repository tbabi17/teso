<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:id="@+id/startup"              
    android:orientation="vertical"   
    android:gravity="center"
    android:layout_gravity="center_vertical">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"                
        android:orientation="vertical">     
        
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:orientation="vertical">       
		    <ImageView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"	        
		        android:gravity="center"	        
		        android:src="@drawable/paste">
		        
		    </ImageView>		    
		   
		</LinearLayout>	
			     	    
         <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center"	        
	        android:padding="20dp"
	        android:orientation="vertical">       
		    <EditText
			    android:layout_width="@dimen/login_user_width"
			    android:layout_height="wrap_content"			    
			    android:background="@drawable/edit_state"
			    android:gravity="center"			    
			    android:padding="@dimen/edit_padding"			    
			    android:textSize="@dimen/edit_font_size"
			    android:id="@+id/user"
			    android:maxLines="1"
			    android:lines="1"			    
			    android:text=""
			    android:textColor="@color/black" />
		    
		    <EditText
			    android:layout_width="@dimen/login_user_width"
			    android:layout_height="wrap_content"		    
			    android:layout_marginTop="10dp"
			    android:background="@drawable/edit_state"
			    android:gravity="center"			    
			    android:padding="@dimen/edit_padding"	
			    android:textSize="@dimen/edit_font_size"	
			    android:password="true"		  	
			    android:lines="1"		     
			    android:id="@+id/pass"
			    android:text=""
			    android:textColor="@color/black" />	   
			    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
			    <Button
		            android:id="@+id/login"
		            android:layout_width="0dp"		            
		            android:layout_height="wrap_content"	
		            android:layout_weight="1"            	           
		            android:gravity="center"
		            android:layout_marginTop="10dp"	  	            
		            android:padding="@dimen/toolbar_padding_hi"
		            android:layout_marginRight="5dp"
		            android:drawableLeft="@drawable/open"
		            android:background="@drawable/back_button_selector"
		            android:textColor="@color/black"
		            android:textSize="@dimen/toolbar_font_size"
		            android:text="Нэвтрэх">
		            
		        </Button>
		        
			    <Button
		            android:id="@+id/xlogin"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"		            	           
		            android:gravity="center"
		            android:padding="@dimen/toolbar_padding_hi"			
		            android:layout_marginTop="10dp"	 	            	           
		            android:clickable="true"
		            android:drawableLeft="@drawable/other"
		            android:background="@drawable/back_button_selector"
		            android:textColor="@color/black"
		            android:textSize="@dimen/toolbar_font_size"
		            android:text="">
		            
		        </Button>
		        			    
		     </LinearLayout>
		     
		    <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/version"
	            android:gravity="center"
	            android:layout_marginTop="20dp"
	            android:textSize="@dimen/sub_title_font_size"	 	               
	            android:textColor="@color/white">	            
	        </TextView>
	       
	    </LinearLayout>	    	   
	</LinearLayout>	   
</LinearLayout>